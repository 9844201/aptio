	Package  = "CryptoPkg"
	Arch  = "IA32 X64 IPF ARM"
	ModuleTypes  = "DXE_RUNTIME_DRIVER"
End

INFComponent
	Name  = "SmmCryptLib"
	File  = "SmmCryptLib.inf"
	Package  = "CryptoPkg"
	Arch  = "IA32 X64 IPF ARM"
	ModuleTypes  = "DXE_SMM_DRIVER"
End

INFComponent
