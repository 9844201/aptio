	Master = Yes
	Token = "CONSOLE_REDIRECTION_SUPPORT" "=" "1"
	Token = "GENERIC_USB_CABLE_SUPPORT" "!=" "1"
End

PATH
	Name  = "ConsoleRedirectionLib_DIR"
	Path  = "AMIDebuggerPkg\Debugger\ConsoleRedirectionLib"
End

